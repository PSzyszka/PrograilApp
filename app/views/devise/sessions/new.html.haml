.form-container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-left-container' }) do |f|
    = render 'devise/shared/error_messages', resource: resource
    .fields-container
      %h2 You already have an account
      %br
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input-field', placeholder: 'Email'
      = f.password_field :password, autocomplete: 'current-password', class: 'input-field', placeholder: 'Password'
      - if devise_mapping.rememberable?
        .checkbox-container
          = f.check_box :remember_me, class: 'checkbox-field'
          = f.label :remember_me, class: 'checkbox-label'
        = f.submit 'Log in', class: 'sign-button'

      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        .forgotten-password
          = link_to 'Forgot your password?', new_password_path(resource_name)

  .vertical-line

  .form-rigth-container
    .fields-container
      %h2 Don't a account yet?
      %br
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to 'Sign up', new_registration_path(resource_name), id: 'sign-up', class: 'sign-up-link'
        %p or
        #fb-root
        %script{ async: '', crossorigin: 'anonymous', defer: 'defer', nonce: 'JFUyOiof', src: 'https://connect.facebook.net/pl_PL/sdk.js#xfbml=1&version=v7.0&appId=186950186053900&autoLogAppEvents=1' }
        .fb-login-button{ 'data-auto-logout-link' => 'false', 'data-button-type' => 'continue_with', 'data-layout' => 'default', 'data-size' => 'large', 'data-use-continue-as' => 'false', 'data-width' => '' }
